# docker-compose.bridge.yml
version: '3.8'

services:
  # سرویس رلایر برای APZ Chain
  apz-relayer:
    build: ./relayers
    command: ["node", "apz-relayer.js"]
    environment:
      - RPC_URL=https://rpc.apzchain.org
      - RELAYER_PRIVATE_KEY=${RELAYER_PRIVATE_KEY}
      - KAFKA_BROKERS=kafka:9092
    depends_on:
      - kafka
    restart: unless-stopped

  # سرویس رلایر برای اتریوم
  eth-relayer:
    build: ./relayers
    command: ["node", "ethereum-relayer.js"]
    environment:
      - RPC_URL=https://mainnet.infura.io/v3/${INFURA_PROJECT_ID}
      - RELAYER_PRIVATE_KEY=${RELAYER_ETH_PRIVATE_KEY}
      - KAFKA_BROKERS=kafka:9092
    depends_on:
      - kafka
    restart: unless-stopped

  # زیرساخت پیام‌رسانی (کافکا)
  zookeeper:
    image: confluentinc/cp-zookeeper:latest
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181

  kafka:
    image: confluentinc/cp-kafka:latest
    depends_on:
      - zookeeper
    environment:
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
    ports:
      - "9092:9092"

  # پایگاه داده برای ذخیره وضعیت تراکنش‌ها
  postgres:
    image: postgres:14
    environment:
      POSTGRES_DB: bridge
      POSTGRES_USER: user
      POSTGRES_PASSWORD: pass
    volumes:
      - postgres_data:/var/lib/postgresql/data

  # داشبورد نظارتی (پرومتئوس و گرافانا)
  prometheus:
    image: prom/prometheus:latest
    volumes:
      - ./monitoring/prometheus.yml:/etc/prometheus/prometheus.yml
    ports:
      - "9090:9090"

  grafana:
    image: grafana/grafana:latest
    environment:
      - GF_SECURITY_ADMIN_PASSWORD=admin
    ports:
      - "3000:3000"

volumes:
  postgres_data:
